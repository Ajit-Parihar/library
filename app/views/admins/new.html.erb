



<div class="new-admin-container">
  <%= flash[:notice] ? content_tag(:div, flash[:notice], class: "flash-message") : nil %>
  
  <h1>Create New Admin</h1>
  
  <%= form_with model: @admin do |form| %>
    <div class="form-field">
      <%= form.label :firstName %>
      <%= form.text_field :firstName, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :lastName %>
      <%= form.text_field :lastName, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Sign Up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

